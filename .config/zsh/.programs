# vi: ft=bash


# --

D2_enable="${D2_enable:-0}"
if [ $D2_enable -eq 1 ]; then
    D2_VERSION="v0.7.0"
    D2_ITER=(
        from"github-rel"
        ver"$D2_VERSION"
        pick"d2-$D2_VERSION/bin/d2"
        as"program"
        nocompile'!'
        "terrastruct/d2"
    )
else
    D2_ITER=()
fi

# --

EZA_enable="${EZA_enable:-0}"
if [ $EZA_enable -eq 1 ]; then
    EZA_VERSION="v0.23.0"
    EZA_ITER=(
        from"github-rel"
        ver"$EZA_VERSION"
        pick"eza"
        as"program"
        nocompile'!'
        "eza-community/eza"
    )
else
    EZA_ITER=()
fi

# --

plugins=(${D2_ITER[@]} ${EZA_ITER[@]})

if [ ${#plugins} -ne 0 ]; then
    zinit wait lucid for \
        "${plugins[@]}"
fi
